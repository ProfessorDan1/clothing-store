generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // weâ€™re using SQLite for local dev
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  imageUrl    String
  meta        Json?    // e.g. sizes, colors, extra fields
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
